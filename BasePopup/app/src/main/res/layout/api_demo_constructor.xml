<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/tv_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_padding"
                android:textColor="@color/text_black1"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="BasePopupWindow(context)" />

            <View style="@style/divider" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:lineSpacingExtra="1.5dp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/text_black2"
                android:textSize="@dimen/text_small"
                tools:text="blablabla\nblablabla" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="vertical">

                <razerdp.demo.widget.DPTextView
                    android:id="@+id/tv_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="正常弹窗"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    app:backgroundColor="@color/common_blue"
                    app:corner_radius="25dp" />

                <razerdp.demo.widget.DPTextView
                    android:id="@+id/tv_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Dialog弹窗"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    app:backgroundColor="@color/common_gold"
                    app:corner_radius="25dp" />

                <razerdp.demo.widget.DPTextView
                    android:id="@+id/tv_dialogfragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="DialogFragment弹窗"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    app:backgroundColor="@color/common_green"
                    app:corner_radius="25dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:lineSpacingExtra="1.5dp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/common_red_light"
                android:textSize="@dimen/text_normal"
                tools:text="blablabla\nblablabla" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>