<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_padding"
            android:text="朋友圈模式选择"
            android:textColor="@color/text_black2"
            android:textSize="@dimen/text_normal" />

        <View style="@style/divider" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_outsidetouch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="outSideTouchAble"
            android:textColor="@color/text_black2"
            android:textSize="@dimen/text_small"
            android:theme="@style/MyCheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_blur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="背景模糊"
            android:textColor="@color/text_black2"
            android:textSize="@dimen/text_small"
            android:theme="@style/MyCheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="连接anchorView（跟随Anchor滑动自动更新BasePopup）"
            android:textColor="@color/text_black2"
            android:textSize="@dimen/text_small"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>


    <razerdp.demo.widget.DPTextView
        android:id="@+id/tv_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/default_padding"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        app:backgroundColor="@color/color_link"
        app:textPressedColor="@color/white_70" />


</LinearLayout>